# -*- mode: ruby -*-
# vi: set ft=ruby :

def salt_provision_zabbix_agent_box(context)
  context.vm.provision "salt", run: 'once' do |salt|
    salt.minion_config = "salt/etc/minion"
    salt.masterless = true
    salt.run_highstate = false
    salt.verbose = true
    salt.log_level = "info"
    salt.colorize = true
    salt.install_type = "git"
    salt.version = "3002.2"
    salt.python_version = "3"
    salt.bootstrap_options = "-P -x python3 -c /tmp"
  end
end

Vagrant.configure("2") do |config|

  config.vagrant.plugins = ["vagrant-reload", "vagrant-scp"]

  config.vm.define "zabbix-agent-box" do |zabbix_agent_box|
    zabbix_agent_box.vm.box = "opensuse/Tumbleweed.x86_64"
    zabbix_agent_box.vm.hostname = "zabbix-agent-box"

    zabbix_agent_box.vm.provider "libvirt" do |v, override|
      override.vagrant.plugins = config.vagrant.plugins + ["vagrant-libvirt"]
      v.cpus = "2"
      v.cputopology sockets: "1", cores: "2", threads: "1"
      v.memory = "1024"
      v.disk_bus = "virtio"
      v.nic_model_type = "virtio-net-pci"
      v.nested = false
      v.cpu_mode = "host-model"
      v.cpu_fallback = "allow"
      v.graphics_type = "vnc"
      v.kvm_hidden = "false"
      v.machine_type = "pc-i440fx-2.11"
      v.machine_arch = "x86_64"
      v.autostart = false
      v.storage_pool_name = "default"

      override.vm.provision 'shell', run: 'once', inline: 'echo "send host-name \"zabbix-agent-box\";" >> /etc/dhclient.conf', privileged: true
      override.vm.provision 'shell', run: 'once', inline: 'zypper install -y -t pattern devel_basis', privileged: true
      override.vm.provision 'shell', run: 'once', inline: 'zypper install -y sysvinit-tools insserv-compat python3 python3-pip python3-setuptools python3-devel python3-virtualenv python3-pyzmq-devel', privileged: true
      override.vm.provision 'shell', run: 'once', inline: 'ln --symbolic /etc/os-release /etc/SuSE-release', privileged: true
      salt_provision_zabbix_agent_box override
      override.vm.provision 'reload'
    end

    zabbix_agent_box.vm.provider "virtualbox" do |v, override|
      override.vagrant.plugins = config.vagrant.plugins + ["vagrant-vbguest"]
      override.vbguest.auto_update = false
      override.vm.network "private_network", type: "dhcp"
      v.name = "zabbix-agent-box"
      v.gui = false
      v.cpus = "2"
      v.memory = "1024"
      v.linked_clone = true
      v.customize ["modifyvm", :id, '--natdnshostresolver1', 'on']
      v.customize ['modifyvm', :id, '--graphicscontroller', 'vmsvga']
      v.customize ['modifyvm', :id, '--audio', 'none']
      v.customize ['modifyvm', :id, '--nested-hw-virt', 'off']

      override.vm.provision 'shell', run: 'once', inline: 'echo "send host-name \"zabbix-agent-box\";" >> /etc/dhclient.conf', privileged: true
      override.vm.provision 'shell', run: 'once', inline: 'echo nameserver 8.8.8.8 | tee /etc/resolv.conf', privileged: true
      override.vm.provision 'shell', run: 'once', inline: 'zypper install -y avahi-utils nss-mdns && systemctl start avahi-daemon && systemctl enable avahi-daemon', privileged: true
      override.vm.provision 'shell', run: 'once', inline: 'zypper install -y -t pattern devel_basis', privileged: true
      override.vm.provision 'shell', run: 'once', inline: 'zypper install -y sysvinit-tools insserv-compat python3 python3-pip python3-setuptools python3-devel python3-virtualenv python3-pyzmq-devel', privileged: true
      override.vm.provision 'shell', run: 'once', inline: 'ln --symbolic /etc/os-release /etc/SuSE-release', privileged: true
      salt_provision_zabbix_agent_box override
      override.vm.provision 'reload'
    end

    zabbix_agent_box.vm.synced_folder "salt/roots/", "/srv/", type: "rsync"
    zabbix_agent_box.vm.synced_folder '.', '/vagrant', disabled: true
  end
end
